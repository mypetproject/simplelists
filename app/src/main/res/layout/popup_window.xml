<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#62def8">

    <EditText
        android:id="@+id/popup_edit"
        android:layout_width="188dp"
        android:layout_height="77dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:hint="Enter text"
        android:textSize="22sp" />

    <Button
        android:id="@+id/popup_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_edit"
        android:layout_alignStart="@+id/popup_edit"
        android:layout_alignEnd="@+id/popup_edit"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="-25dp"


        android:foregroundGravity="center"
        android:gravity="center"
        android:text="CANCEL"
        />
    <Button
        android:id="@+id/popup_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_edit"
        android:layout_alignStart="@+id/popup_button"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="15dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="OK"
        />

    <Button
        android:id="@+id/popup_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_edit"
        android:layout_alignStart="@+id/popup_button"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="NEXT"
        android:layout_marginStart="25dp"
        />

</RelativeLayout>